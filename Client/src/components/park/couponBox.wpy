  position: fixed;
  left: 0;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
  opacity: 0;
  .scale(1.2, 1.2);
  .transition;
  &.show {
    z-index: 99;
    opacity: 1;
    .scale(1, 1);
    background: rgba(0, 0, 0, .5);
  }
  .radios {
    .width(30);
    .height(30);
    .radius(16rpx);
    overflow: hidden;
    background: #fff;
    &::before {
      content: "\e93e";
      position: relative;
      top: -1rpx;
      left: 3rpx;
      .transition;
      color: #fff;
      font-family: "iconfont";
      font-size: 30rpx;
      line-height: 30rpx;
      font-weight: bold;
    }
    &.current::before {
      color: #ff4e4e;
    }
  }
  .content {
    .centerMiddle;
    .width(580);
    >.flexs {
      padding: 15rpx 40rpx 15rpx 20rpx;
      border-bottom: 1px solid #eee;
      background: #f1f1f1;
    }
    .ul {
      max-height: 640rpx;
      overflow-y: scroll;
      margin-bottom: 19rpx;
    }
    .li {
      position: relative;
      margin: 20rpx 20rpx 0;
      .radius;
      background: #ff4e4e;
      >view.font-20 {
        padding: 10rpx 0;
        margin: 0 20rpx;
        border-top: 1px dashed #fff;
      }
      view.center {
        margin-right: 20rpx;
        text-align: center;
      }
      &:before,
      &:after {
        content: "";
        display: block;
        position: absolute;
        bottom: 50rpx;
        .width(16);
        height: 16rpx;
        .radius(8rpx);
        background: #fff;
      }
      &:before {
        left: 0;
        .translate(-50%, 50%);
      }
      &:after {
        right: 0;
        .translate(50%, 50%);
      }
